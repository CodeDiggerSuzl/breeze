<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="petStore" class="org.breeze.entity.v2.PetStore">
        <property name="account" ref="account"/>
        <property name="item" ref="item"/>
        <property name="boss" value="Leonard"/>
        <property name="version" value="2"/>
        <property name="switch" value="true"/>
    </bean>

    <bean id="account" class="org.breeze.entity.v2.Account"/>
    <bean id="item" class="org.breeze.entity.v2.Item"/>
</beans>